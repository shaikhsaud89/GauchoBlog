<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_pressed="true"
          android:drawable="@drawable/image_radio_pressed" />
    <item android:state_checked="false" android:state_pressed="true"
          android:drawable="@drawable/image_radio_pressed" />

    <item android:state_checked="true" android:state_focused="true"
          android:drawable="@drawable/image_radio_checked" />
    <item android:state_checked="false" android:state_focused="true"
          android:drawable="@drawable/image_radio_not_checked" />

    <item android:state_checked="false" android:drawable="@drawable/image_radio_not_checked" />
    <item android:state_checked="true" android:drawable="@drawable/image_radio_checked" />
</selector>